---
import type { ProjectType } from "./project-item.astro";
import ProjectItem from "./project-item.astro";

const projects: ProjectType[] = [
  {
    title: "MAIR Network",
    description:
      "A network of Moroccan Researchs in AI around the Globe, MAIR aims to connect Moroccan researchers in AI and ML, share knowledge, and foster collaboration. We organize events, workshops, and discussions to promote AI research and innovation in Morocco.",
    image: "/mair2.gif",
    links: [
      { text: "Watch the latest episode", url: "/podcast" },
      { text: "Suggest a topic", url: "/podcast/planning" },
    ],
    color: "#29AD86",
  },
  {
    title: "State Of AI Research",
